{
  "compilerOptions": {
    "target": "ES2020",             // إصدار JS الناتج
    "module": "Node16",             // <== لازم يتطابق مع moduleResolution
    "moduleResolution": "Node16",   // يحدد كيف يلاقي imports
    "strict": true,
    "esModuleInterop": true,        // عشان نقدر نعمل import express from "express"
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"]
}
